@{
    Layout = null ;
}


<style type="text/css">
    element.style {
        background: transparent;
        padding: 10px;
        width: 100%;
        display: block;
        margin-bottom: 5px;
        border: 3px solid #f37737;
    }

    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
    }

    .schedule-container {
        width: 100%;
        max-width: 800px;
        margin: 50px auto;
        background-color: #fff;
        border: 1px solid #ddd;
        padding: 20px;
        text-align: center;
    }

    .header {
        padding-bottom: 20px;
        border-bottom: 1px solid #ddd;
    }

        .header h2 {
            margin: 0;
            font-size: 24px;
            color: #f0643b;
        }

        .header p {
            margin: 5px 0;
            font-size: 14px;
            color: #333;
        }

    .date-bar {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

    .date-item {
        flex: 1;
        padding: 10px;
        background-color: #f4f4f4;
        border: 1px solid #ddd;
        margin: 5px;
        font-size: 14px;
        color: #333;
        text-align: center;
    }

        .date-item.active {
            background-color: #f0643b;
            color: #fff;
        }

        .date-item:hover {
            background-color: #f0643b;
            color: #fff;
            cursor: pointer;
        }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        color: #333;
    }

    /* Header: Thanh điều hướng */
    header {
        background-color: #333;
        padding: 1rem 0;
    }

    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 80%;
        margin: auto;
    }

    .logo a {
        color: #fff;
        font-size: 1.5rem;
        font-weight: bold;
        text-decoration: none;
    }

    .nav-links {
        list-style: none;
    }

        .nav-links li {
            display: inline;
            margin-right: 20px;
        }

            .nav-links li a {
                color: #fff;
                text-decoration: none;
                font-size: 1rem;
            }

    .user-actions a {
        color: #fff;
        margin-left: 20px;
        text-decoration: none;
        background-color: #ff6600;
        padding: 0.5rem 1rem;
        border-radius: 5px;
    }


    main {
        padding: 2rem 0;
    }

    .movies-list {
        width: 80%;
        margin: auto;
    }

    .movie {
        display: flex;
        margin-bottom: 2rem;
        background-color: white;
        padding: 1rem;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .movie img {
            width: 150px;
            margin-right: 1rem;
            border-radius: 5px;
        }

    .movie-info {
        flex: 1;
    }

        .movie-info h2 {
            color: #333;
            margin-bottom: 0.5rem;
        }

    .showtimes {
        margin-top: 1rem;
    }

        .showtimes button {
            margin-right: 10px;
            padding: 0.5rem 1rem;
            background-color: #ff6600;
            border: none;
            color: white;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1rem;
        }

            .showtimes button:hover {
                background-color: #e55b00;
            }

    /* Footer */
    footer {
        background-color: #333;
        color: #fff;
        text-align: center;
        padding: 1rem 0;
    }
</style>
